<div>
	Course List
	<%= render @courses %>
</div>
<%= form_for([@bill, @item]) do |f| %>
	<div>
		Item Form
	</div>
	<div class="field">
	<%= f.collection_select :course_id, @courses, :id, :name, include_blank: true %>
	<%#= f.select :course_id, @courses, :id, :name, include_blank: true %>
	<%#= f.text_field :status, placeholder: "Status" %>
	</div>
